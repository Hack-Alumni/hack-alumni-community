{
  "version": 2,
  "buildCommand": "yarn vercel-build",
  "installCommand": "yarn install",
  "framework": null,
  "functions": {
    "apps/api/src/routes/jobs.process.ts": {
      "maxDuration": 30
    },
    "apps/api/src/routes/cron.cleanup-old-jobs.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/api/src/main.ts"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/apps/admin-dashboard/build/server/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/member-profile/build/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/jobs/process",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/cleanup-old-jobs",
      "schedule": "0 2 * * *"
    }
  ]
}
