{
  "extends": "@hackcommunity/tsconfig/remix.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*", "../../packages/core/src/*"],
      "@ui/colors": ["../../packages/ui/src/colors.ts"]
