{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "DATABASE_URL=$DATABASE_PUBLIC_URL yarn db:migrate && yarn build --filter=mentor-platform",
    "nixpacksConfigPath": "/apps/mentor-platform/railway.json",
    "watchPatterns": [
      "/apps/mentor-platform/**/*",
      "/packages/core/**/*",
      "/packages/db/**/*",
      "/packages/ui/**/*"
    ]
  },
  "deploy": {
    "numReplicas": 2,
    "startCommand": "yarn start --filter=mentor-platform",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
